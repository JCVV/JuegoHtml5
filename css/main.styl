@import 'nib'
@import 'fonts.css'


html
	min-height 100%

body
	background radial-gradient(#fff, #D4EBF1)
	overflow auto
	font-size 16px
	min-height 100%

#container
	background url('../images/bg_down.png') bottom left no-repeat
	background-size 100%
	height 100%
	min-height 611px
	overflow auto
	position relative

	#characters
		background url('../images/characters.png') bottom left no-repeat
		background-size 100%
		bottom 0
		left 0
		height 265px
		position absolute
		width 360px

	#sandox
		background #333
		margin 0 3rem 3rem
		height 360px


	#textbox
		background #fff
		margin 6rem 3rem
		min-height 400px
		padding 6rem 2rem 0 2rem

		p
			margin 0
			&.user
				font-size 1.6rem
				&.his
					color #00ABCC
				&.her
					color #ff0056
					text-align right

			&.twit
				color #567176
				margin-bottom 1rem
				&.right
					text-align right



	.head-chat
		position absolute
		right 30px
		top 35px
		div
			display inline-block
			vertical-align top
		.head
			font-size 3rem
			line-height 4rem
			width 14rem

	.grandson
		background url('../images/grandson.png') no-repeat
		background-size 100%
		left 40px
		position absolute
		top 15px
		width 5rem
		height 10rem

	.grandma
		background url('../images/grandma.png') no-repeat
		background-size 100%
		right 30px
		position absolute
		bottom 125px
		width 8rem
		height 11rem




header
	overflow hidden

	h1
		color #FF1D24
		font-family 'OpenSansCond'
		font-weight 300
		font-size 4rem
		margin 0
		text-align center
		text-transform uppercase

	.logo
		background url('../images/logo.png') no-repeat
		background-size 100%
		height 10rem
		margin 4rem auto 1rem
		width 10rem

	&.game
		overflow none
		padding 3rem 3rem 0

		.character-grandma
			background url('../images/grandma_bandana.png') no-repeat bottom center
			background-size 100%
			width 50%
			height 14rem
			float left
		.game-info
			float right
			span.texty
				color #fff
				font-family 'OpenSansCondBold'
				font-size 1rem
			.btn-restart, .score
				margin-bottom 1rem



section

	&#index

		.buttons
			margin-top 3rem
			a
				margin 0 auto 2rem



footer

	&.intro
		overflow hidden
		.btn-back
			float left
		.btn-next
			float right


.btn.btn-next:hover
	transform translateX(2rem)		
.btn.btn-back:hover
	transform translateX(-2rem)

.btn
	border 0
	color #fff
	display block
	font-family 'OpenSansCond'
	font-size 2.2rem
	line-height 3.2rem
	width 12rem
	padding-left 1rem
	text-align left
	text-transform uppercase
	transition all 0.1s ease-out

a.btn:hover
	color #fff
	text-decoration none


.btn-blue
	background url('../images/btn_blue.png') no-repeat
	background-size 100%

.btn-purple
	background url('../images/btn_purple.png') no-repeat
	background-size 100%

.btn-red
	background url('../images/btn_red.png') no-repeat
	background-size 100%

.btn-red-back
	background url('../images/btn_red_back.png') no-repeat
	background-size 100%
	text-align right
	padding-right 1rem


.icon
	width 4rem
	height 4rem

.icon-fb
	background url('../images/icon_fb.png') no-repeat
	background-size 100%

.icon-tw
	background url('../images/icon_tw.png') no-repeat
	background-size 100%

